{
	"name": "assistant",
	"displayName": "助手",
	"description": "效率小助手",
	"version": "1.0.0",
	"icon": "assets/icons/icon.png",
	"galleryBanner": {
		"color": "#2C3E50",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.84.0"
	},
	"author": {
		"name": "wanghuaiyong"
	},
	"license": "Apache-2.0",
	"publisher": "assistant",
	"repository": {
		"type": "git",
		"url": ""
	},
	"homepage": "",
	"categories": [],
	"keywords": [
		"助手"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "assistant-ActivityBar",
					"title": "助手",
					"icon": "assets/icons/icon.svg"
				}
			]
		},
		"views": {
			"assistant-ActivityBar": [
				{
					"type": "webview",
					"id": "fast-merge.SidebarProvider",
					"name": "",
					"icon": "assets/icons/icon.svg"
				}
			]
		},
		"commands": [],
		"keybindings": [],
		"menus": {
			"view/title": [],
			"editor/title": [],
			"editor/context": []
		},
		"submenus": [],
		"configuration": {}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run build:webview && npx tsc --noEmit && node esbuild.js --production",
		"build:webview": "cd webview-ui && npm run build",
		"dev:webview": "cd webview-ui && npm run dev"
	},
	"devDependencies": {
		"@eslint/js": "^9.22.0",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "20.x",
		"@types/vscode": "^1.84.0",
		"esbuild": "^0.25.0",
		"eslint-plugin-react": "^7.37.4",
		"globals": "^16.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.3",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.27.0"
	},
	"dependencies": {
		"fs-extra": "^11.3.1"
	}
}
